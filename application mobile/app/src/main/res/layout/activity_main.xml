<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ShapeAppearance.MaterialComponents.MediumComponent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backroundbuttongreen"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="43dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textgeneral"
            android:layout_width="132dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:text="General"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textsetting"
            android:layout_width="132dp"
            android:layout_height="53dp"
            android:layout_marginStart="90dp"
            android:text="Setting"
            android:textColor="#0E0E0E"

            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="33dp"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:text="Hello"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textgeneral" />

        <TextView
            android:id="@+id/name"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="199dp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            /> </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/bacgriund2"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/bacgriund2"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Zone Temperature"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="96dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagetemperature"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/rougebecher" />

            <TextView
                android:layout_marginStart="28dp"
                android:id="@+id/temperaturetext"
                android:layout_width="182dp"
                android:layout_height="52dp"
                android:layout_gravity="center|left"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="34sp"
                android:textStyle="bold"


                app:layout_constraintVertical_bias="0.362" />


        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="203dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginStart="19dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/flechederetour" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/flechederetour" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="The Pressure"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imagepressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/iconspression96" />

            <TextView
                android:id="@+id/pressuretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:text="99:9999"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"

                />


        </FrameLayout>

        <FrameLayout
            android:layout_width="169dp"
            android:layout_height="176dp"

            android:layout_marginStart="19dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="168dp"
                android:layout_height="177dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/temperaturemain" />

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="168dp"
                android:layout_height="176dp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/temperaturemain" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"

                android:text="The Humidity"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imagehumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/icons8" />

            <TextView
                android:id="@+id/humiditytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:text="999"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"

                />


        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="203dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="169dp"
            android:layout_height="176dp"
            android:layout_marginStart="19dp">

            <ImageView
                android:id="@+id/imageView38"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/newbackground" />

            <ImageView
                android:id="@+id/imageView48"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/newbackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="The CO2 Gaz"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageCo2"
                android:layout_width="123dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:src="@drawable/co" />

            <TextView
                android:id="@+id/co2text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:text="99:9999"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"

                />


        </FrameLayout>

        <FrameLayout
            android:layout_width="169dp"
            android:layout_height="176dp"

            android:layout_marginStart="19dp">

            <ImageView
                android:id="@+id/imageView40"
                android:layout_width="168dp"
                android:layout_height="177dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/temperaturemain" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="168dp"
                android:layout_height="176dp"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/temperaturemain" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="All The values"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imagemrthane"
                android:layout_width="96dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/atmospheric" />




        </FrameLayout>

    </LinearLayout>


</LinearLayout>