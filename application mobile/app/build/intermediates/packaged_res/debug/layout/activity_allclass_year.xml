<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackround2"
    tools:context=".AllclassYear">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="55dp"
    android:orientation="horizontal"

    >
    <ImageView
        android:id="@+id/returne_"
        android:layout_width="88dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/iconsretornee"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Air Quality Analytics"
        android:textSize="25dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"

        />

</LinearLayout>






    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="356dp"
        android:layout_height="294dp"
        android:background="@drawable/bacrounliner"
        android:layout_gravity="center"
        app:cardBackgroundColor="#ffffff"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="349dp"
        android:layout_height="376dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />



</LinearLayout>
