<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:hapticFeedbackEnabled="false"

    android:background="@drawable/mainbackround2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Image description"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/top_background2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="316dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="#EA6D35"
                android:textSize="40sp"
                android:textStyle="bold"
                android:translationX="50dp"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <EditText
                android:id="@+id/user"
                android:layout_width="323dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="12dp"
                android:drawablePadding="10dp"
                android:ems="10"

                android:hint="Username"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textColor="#C8FFFFFF"
                android:textColorHint="#555353"
                app:layout_constraintBottom_toTopOf="@+id/email1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="323dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="12dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#E6E6E6"
                android:textColorHint="#555353"
                app:layout_constraintBottom_toTopOf="@+id/password1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="323dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#DAD5D5"
                android:textColorHint="#555353"
                app:layout_constraintBottom_toTopOf="@+id/confirmpassword1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email1" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/PaswordAlert"
                android:layout_width="323dp"
                android:layout_height="29dp"
                android:textSize="13dp"
                android:textColor="#B71C1C"/>

            <EditText
                android:id="@+id/confirmpassword1"
                android:layout_width="323dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#DDDBDB"
                android:textColorHint="#555353"
                app:layout_constraintBottom_toTopOf="@+id/register1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password1" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/Paswordconfirm2"
                android:layout_width="323dp"
                android:layout_height="29dp"
                android:textSize="20dp"
                android:layout_marginBottom="36dp"
                android:textColor="#B71C1C"/>

            <Button
                android:id="@+id/register1"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="62dp"
                android:backgroundTint="#FFEA6D35"
                android:padding="10dp"
                android:text="Register"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmpassword1" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
